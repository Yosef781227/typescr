{
  "compilerOptions": {
    "target": "ES6",                   // Outputs modern JavaScript (ES6+)
    "module": "ES6",                   // Uses ES Modules (import/export)
    "moduleResolution": "Node",        // Resolves modules like Node.js
    "strict": true,                    // Enable strict type-checking
    "outDir": "./dist",                // Outputs compiled files to the 'dist' folder
    "esModuleInterop": true,           // Ensures compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true // Enforces consistent file naming
  },
  "include": ["src/**/*"]
}
